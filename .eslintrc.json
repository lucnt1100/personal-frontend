{
  "extends": ["@nuxt/eslint-config", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "semi": 2,
    "prefer-const": "warn",
    "quotes": ["error", "single"],
    "curly": "error",
    "eqeqeq": ["error", "always"]
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  }
}
